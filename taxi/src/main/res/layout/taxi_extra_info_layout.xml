<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/taxi_form_booking_time_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:background="@drawable/taxi_adr_selector"
  android:orientation="vertical"
  android:visibility="gone">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageView
      android:id="@+id/taxi_form_booking_time_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginRight="5dp"
      android:layout_centerVertical="true"
      android:src="@drawable/taxi_booking_trip_time"/>

    <!-- 预约时间 -->
    <TextView
      android:id="@+id/taxi_form_booking_time"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_toRightOf="@id/taxi_form_booking_time_icon"
      android:gravity="center"
      android:text="@string/taxi_book_time"
      android:textColor="#585c64"
      android:textSize="12sp"/>
  </LinearLayout>

  <View
    android:id="@+id/taxi_full_form_separator"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#f3f3f3"/>
</LinearLayout>