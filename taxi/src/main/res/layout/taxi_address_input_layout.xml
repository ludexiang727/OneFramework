<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#FFFFFF"
  android:clickable="true"
  android:clipChildren="false"
  android:orientation="vertical"
  android:transitionName="searchView"
  app:outsideBackground="@drawable/taxi_common_round_ract">

  <TextView
    android:id="@+id/taxi_booking_time"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:drawableLeft="@drawable/taxi_booking_trip_time"
    android:drawablePadding="5dp"
    android:gravity="center"
    android:text="@string/taxi_book_time"
    android:textColor="#191d21"
    android:textSize="14sp"
    android:visibility="gone"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#e4e6e7"/>

  <TextView
    android:id="@+id/taxi_start_address"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:background="@drawable/taxi_adr_selector"
    android:drawableLeft="@drawable/taxi_start_address_point"
    android:drawablePadding="10dp"
    android:text="@string/taxi_start_address_location"
    android:gravity="center_vertical"
    android:hint="@string/taxi_start_address"
    android:textColor="#191d21"
    android:textSize="14sp"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="26dp"
    android:background="#e4e6e7"/>

  <TextView
    android:id="@+id/taxi_end_address"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:background="@drawable/taxi_adr_selector"
    android:drawableLeft="@drawable/taxi_end_address_point"
    android:drawablePadding="10dp"
    android:gravity="center_vertical"
    android:hint="@string/taxi_end_address"
    android:textColor="#191d21"
    android:textSize="14sp"/>
</LinearLayout>
