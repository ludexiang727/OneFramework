<selector
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_selected="true">
    <shape android:shape="rectangle">
      <solid
        android:color="#10f05b48"/>

      <stroke
        android:color="#f05b48"
        android:width="1px"/>
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <solid
        android:color="#a0ffffff"/>

      <stroke
        android:color="#e3e3e3"
        android:width="1px"/>
    </shape>
  </item>
</selector>