<com.one.widget.PullScrollRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/pull_scroll_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.one.widget.CalendarTitleLayout
    android:id="@+id/calendar_title_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentTop="true"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/calendar_title_layout"
    android:orientation="vertical">
    <com.one.widget.PullListView
      android:id="@android:id/list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/white"
      android:cacheColorHint="@android:color/transparent"
      android:listSelector="@android:color/transparent"
      app:scroll_view="header"
      app:scroll_max_height="50dp"/>

    <com.one.widget.EmptyView
      android:id="@+id/empty_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"/>
  </LinearLayout>
</com.one.widget.PullScrollRelativeLayout>