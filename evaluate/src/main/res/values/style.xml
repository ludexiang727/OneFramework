<resources>
  <style name="OCImageViewStyle">
    <item name="android:scaleType">fitXY</item>
    <item name="android:contentDescription">@null</item>
  </style>

  <style name="OCEvaluateStarStyle" parent="OCImageViewStyle">
    <item name="android:layout_width">@dimen/evaluate_star_width</item>
    <item name="android:layout_height">@dimen/evaluate_star_height</item>
    <item name="android:layout_marginLeft">@dimen/evaluate_star_margin_left</item>
    <item name="android:layout_marginRight">@dimen/evaluate_star_margin_right</item>
  </style>

  <declare-styleable name="CircularProgressBar">
    <attr name="cpbStyle" format="reference" />
    <attr name="cpb_color" format="color" />
    <attr name="cpb_bgcolor" format="color" />
    <attr name="cpb_colors" format="reference" />
    <attr name="cpb_stroke_width" format="dimension" />
    <attr name="cpb_min_sweep_angle" format="integer" />
    <attr name="cpb_max_sweep_angle" format="integer" />
    <attr name="cpb_sweep_speed" format="float" />
    <attr name="cpb_rotation_speed" format="float" />
  </declare-styleable>
</resources>