<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#fff"
  android:orientation="vertical">

  <com.test.demo.widget.evaluate.widgets.CardTitleView
    android:id="@+id/evaluate_evaluate_operating_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <FrameLayout
    android:id="@+id/evaluate_evaluate_operating_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
      android:id="@+id/evaluate_evaluate_operating_scroller"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none">

      <LinearLayout
        android:id="@+id/evaluate_evaluate_operating_component_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/oc_evaluate_operating_divider"
        android:orientation="vertical"
        android:showDividers="middle"></LinearLayout>
    </ScrollView>
  </FrameLayout>

</LinearLayout>